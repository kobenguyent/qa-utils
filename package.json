{
  "name": "qa-utils",
  "version": "1.0.1",
  "description": "A comprehensive collection of quality assurance tools and utilities to enhance your testing workflow",
  "author": "KobeT <kobenguyent@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kobenguyent/qa-utils",
  "repository": {
    "type": "git",
    "url": "https://github.com/kobenguyent/qa-utils.git"
  },
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:github": "DEPLOY_ENV=github npm run build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 220",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "pr": "./scripts/create_pr.sh",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development npx electron .\"",
    "electron:build": "node scripts/bump-electron-version.cjs && cross-env ELECTRON=true npm run build && electron-builder",
    "electron:build:mac": "node scripts/bump-electron-version.cjs && cross-env ELECTRON=true npm run build && electron-builder --mac",
    "electron:build:win": "node scripts/bump-electron-version.cjs && cross-env ELECTRON=true npm run build && electron-builder --win",
    "electron:build:linux": "node scripts/bump-electron-version.cjs && cross-env ELECTRON=true npm run build && electron-builder --linux",
    "electron:build:all": "node scripts/bump-electron-version.cjs && cross-env ELECTRON=true npm run build && electron-builder -mwl"
  },
  "dependencies": {
    "@imgly/background-removal": "^1.7.0",
    "@ngneat/falso": "6.4.0",
    "@types/chroma-js": "^3.1.2",
    "@types/qrcode": "^1.5.6",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "axios": "1.4.0",
    "bootstrap": "5.2.3",
    "browser-image-compression": "^2.0.2",
    "chroma-js": "^3.2.0",
    "date-fns": "2.30.0",
    "humps": "2.0.1",
    "js-base64": "3.7.5",
    "mermaid": "^11.12.2",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.530",
    "qrcode": "^1.5.4",
    "react": "18.2.0",
    "react-bootstrap": "2.7.4",
    "react-circular-progressbar": "^2.1.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "18.2.0",
    "react-json-editor-viewer": "1.0.7",
    "react-jwt": "1.2.0",
    "react-markdown": "9.0.1",
    "react-router-dom": "6.11.1",
    "react-syntax-highlighter": "^15.6.1",
    "react-zoom-pan-pinch": "3.0.7",
    "use-ua-parser-js": "1.1.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/humps": "2.0.2",
    "@types/node": "20.1.3",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "@vitejs/plugin-react-swc": "3.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "eslint": "8.38.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.3.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "typescript": "5.0.2",
    "vite": "4.3.2",
    "vite-plugin-istanbul": "^5.0.0",
    "vitest": "^1.0.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.kobenguyent.qa-utils",
    "productName": "QA Utils",
    "copyright": "Copyright Â© 2024 KobeT",
    "directories": {
      "output": "release",
      "buildResources": "buildResources"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "buildResources/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "buildResources/icon.png"
    },
    "linux": {
      "category": "Development",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "buildResources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
